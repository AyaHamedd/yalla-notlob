<div class="container flex-grow-1 justify-content-center">
    <div class="mt-0">
        <h1 class="text-center fw-bold">Restaurant Menu</h1>
    </div>
    <div class="container-fluid">
        <h3 class="text-center">For order created by
            <%= @order.user.full_name %>
        </h3>
        <%= link_to "back to order", order_path(@order) %>
        <div class="row text-center">
            <div class="col-md-12">
                <%= image_tag @order.restaurant_menu.variant(resize: "500x500") %>
            </div>
        </div>
    </div>
</div>