<%= form_with(model: [@order, @order.items.build], id: dom_id(item), data: {controller: "reset-form", action: "turbo:submit-end->reset-form#reset"}) do |form| %>
    <div class="field row">
        <div class="col-md-2">
            <%= form.label :name, class: "form-label" %> 
            <%= form.text_field :name, class: "form-control"%> <br>
            <% item.errors.full_messages_for(:name).each do |message| %> 
                <p><%= message %> </p>
            <% end %>
        </div>
        <div class="col-md-2">
            <%= form.label :price, class: "form-label" %>
            <%= form.number_field :price, in: 1.0..1000.0, step: 0.5, class: "form-control" %> <br>
            <% item.errors.full_messages_for(:price).each do |message| %> 
                <p><%= message %> </p>
            <% end %>
        </div>
        <div class="col-md-2">
            <%= form.label :quantity, class: "form-label" %>
            <%= form.number_field :quantity, in: 1.0..100.0, step: 1, class: "form-control" %> <br>
            <% item.errors.full_messages_for(:quantity).each do |message| %> 
                <p><%= message %> </p>
            <% end %>
        </div>
    </div>
    <%= form.submit "Add",class: "btn btn-primary", data: { disable_with: false } %> 
<% end %>